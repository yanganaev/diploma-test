on: [push]
jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
    
    - uses: actions/checkout@master
    
    - uses: azure/login@v1
      with:
        creds: ${{ secrets.AZURE_CREDENTIALS }}

    - name: Create ACR
      id: create-acr
      run: |
        az acr create -n nhlacr -g Epam-Diploma --location "East US" --sku Standard --admin-enabled
        echo "::set-output name=acr_username::`az acr credential show -n nhlacr --query username | xargs`"
        echo "::set-output name=acr_password::`az acr credential show -n nhlacr --query passwords[0].value | xargs`"
        echo "::add-mask::`az acr credential show -n nhlacr --query passwords[0].value | xargs`"
    - uses: azure/docker-login@v1
      with:
        login-server: nhlacr.azurecr.io
        username: ${{ steps.create-acr.outputs.acr_username }}
        password: ${{ steps.create-acr.outputs.acr_password }}

    - name: Build and push image to ACR
      id: build-image
      run: |
        docker build "$GITHUB_WORKSPACE/" -f  "Dockerfile" -t epamdiplomaacr.azurecr.io/nhlapp001:${{ github.sha }} --label dockerfile-path=Dockerfile
        docker push epamdiplomaacr.azurecr.io/nhlapp001:${{ github.sha }}
    
    - uses: azure/k8s-set-context@v1
      id: login
      with:
         kubeconfig: ${{ secrets.aks_feb09_kubeConfig }}
    
    - name: Create namespace
      run: |
        namespacePresent=`kubectl get namespace | grep nhlapp001 | wc -l`
        if [ $namespacePresent -eq 0 ]
        then
            echo `kubectl create namespace nhlapp001`
        fi
    - uses: azure/k8s-create-secret@v1
      with:
        namespace: nhlapp001
        container-registry-url: nhlacr.azurecr.io
        container-registry-username: ${{ steps.create-acr.outputs.acr_username }}
        container-registry-password: ${{ steps.create-acr.outputs.acr_password }}
        secret-name: nhlauth
       
    - uses: azure/k8s-deploy@v1.2
      with:
        namespace: nhlapp001
        manifests: |
          manifests/deployment.yaml
          manifests/service.yaml
        images: |
         nhlacr.azurecr.io/nhlapp001:${{ github.sha }}
        imagepullsecrets: |
          nhlauth  
